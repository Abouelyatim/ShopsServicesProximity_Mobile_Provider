<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/new_default_background_color"
        tools:context=".ui.main.account.discount.discount.ViewOfferFragment">

   <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
       android:orientation="vertical"
           android:padding="16dp"
           android:background="@color/new_default_background_color">
       <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/offer_name"
               android:text="Test"
               android:textColor="#000"
               android:textSize="22sp"
               android:textStyle="bold"

               />

       <TextView
               android:layout_marginTop="16dp"
               android:layout_width="wrap_content"
               android:layout_height="25dp"
               android:id="@+id/offer_state"
               android:text="Planned"
               android:textColor="#000"
               android:textSize="12sp"
               android:background="@drawable/radius_button_yellow"
               android:paddingBottom="5dp"
               android:paddingTop="5dp"
               android:paddingStart="8dp"
               android:paddingEnd="8dp"
               android:gravity="center"
               />
   </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
            android:background="@color/white">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="summary"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"

                />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="16dp"

                >
            <TextView
                    android:id="@+id/discount_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2%"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:paddingEnd="5dp"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="discount on"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    />
            <TextView
                    android:id="@+id/discount_product_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    />
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Articles"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="16dp"

                >
            <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active from"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:paddingEnd="5dp"
                    />

            <TextView
                    android:id="@+id/discount_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9 juin - 10 juin"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>