<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        >
    <TextView
            android:id="@+id/header"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:ellipsize="end"
            android:textColor="@color/grey4"
            android:textSize="17sp"
            android:text="CONFIRMATION"
            android:maxLines="3"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textAllCaps="false"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/container1"
            android:layout_margin="16dp"
            >

       <TextView
               android:visibility="gone"
               android:id="@+id/confirm_picked_up"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:textSize="16sp"
               android:textColor="#000"
               android:text="You declare that the order has been picked up by the customer"/>


        <TextView
                android:visibility="gone"
                android:id="@+id/confirm_delivered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#000"
                android:text="you declare that the order has been delivered to the address indicated by the customer"/>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/input_start_range"
                android:textColor="#000"
                android:hint="description"
                android:inputType="number"

                />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <Button
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            android:textColor="@color/white"
            android:background="@drawable/main_button_drawable"
            android:text="Confirm" />

</LinearLayout>
