<?xml version="1.0" encoding="utf-8"?>
<navigation
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/nav_graph"
        app:startDestination="@id/launcherFragment">


    <fragment
            android:id="@+id/launcherFragment"
            android:name="com.smartcity.provider.ui.auth.LauncherFragment"
            android:label="fragment_launcher"
            tools:layout="@layout/fragment_launcher" >

        <action
                android:id="@+id/action_launcherFragment_to_forgotPasswordFragment"
                app:destination="@id/forgotPasswordFragment"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"/>

        <action
                android:id="@+id/action_launcherFragment_to_loginFragment"
                app:destination="@id/loginFragment"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"/>

        <action
                android:id="@+id/action_launcherFragment_to_registerFragment"
                app:destination="@id/registerFragment"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"/>

    </fragment>


    <fragment
            android:id="@+id/forgotPasswordFragment"
            android:name="com.smartcity.provider.ui.auth.ForgotPasswordFragment"
            android:label="fragment_forgot_password"
            tools:layout="@layout/fragment_forgot_password" />

    <fragment
            android:id="@+id/loginFragment"
            android:name="com.smartcity.provider.ui.auth.LoginFragment"
            android:label="fragment_login"
            tools:layout="@layout/fragment_login" />


    <fragment
            android:id="@+id/registerFragment"
            android:name="com.smartcity.provider.ui.auth.RegisterFragment"
            android:label="fragment_register"
            tools:layout="@layout/fragment_register" >
        <action
                android:id="@+id/action_registerFragment_to_chooseServiceFragment"
                app:destination="@id/chooseServiceFragment" />
    </fragment>
    <fragment
            android:id="@+id/chooseServiceFragment"
            android:name="com.smartcity.provider.ui.auth.ChooseServiceFragment"
            android:label="fragment_choose_service"
            tools:layout="@layout/fragment_choose_service" >
        <action
                android:id="@+id/action_chooseServiceFragment_to_createStoreFragment"
                app:destination="@id/createStoreFragment" />
    </fragment>
    <fragment
            android:id="@+id/createStoreFragment"
            android:name="com.smartcity.provider.ui.auth.CreateStoreFragment"
            android:label="fragment_create_store"
            tools:layout="@layout/fragment_create_store" >
        <action
                android:id="@+id/action_createStoreFragment_to_launcherFragment"
                app:destination="@id/launcherFragment" />
    </fragment>
</navigation>